    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Electron Main",
            "cwd": "${workspaceFolder}/src/App",
            "runtimeExecutable": "${workspaceFolder}/src/App/node_modules/.bin/electron.cmd",
            "args": ["."]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Electron Tests",
            "cwd": "${workspaceFolder}/src/IntegrationTests",
            "runtimeExecutable": "npm",
            "protocol": "legacy",
            "args": ["test", "--storage=inmemory"]
        }
    ]
}